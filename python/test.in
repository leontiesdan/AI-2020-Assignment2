assign(domain_size, 8).
assign(max_models, 1).
set(arithmetic).

formulas(rectangles).

	r0h <-> (L0 = 2 & H0 = 3).
	r0v <-> (L0 = 3 & H0 = 2).
	-(r0h -> r0v) | -(r0v -> r0h).
	
	r1h <-> (L1 = 2 & H1 = 3).
	r1v <-> (L1 = 3 & H1 = 2).
	-(r1h -> r1v) | -(r1v -> r1h).
	
	r2h <-> (L2 = 2 & H2 = 3).
	r2v <-> (L2 = 3 & H2 = 2).
	-(r2h -> r2v) | -(r2v -> r2h).
	
	r3h <-> (L3 = 2 & H3 = 3).
	r3v <-> (L3 = 3 & H3 = 2).
	-(r3h -> r3v) | -(r3v -> r3h).
	
end_of_list.

formulas(bounds).

	X0 >= 0 & (X0 + L0 <= 8).
	Y0 >= 0 & (Y0 + H0 <= 4).
	
	X1 >= 0 & (X1 + L1 <= 8).
	Y1 >= 0 & (Y1 + H1 <= 4).
	
	X2 >= 0 & (X2 + L2 <= 8).
	Y2 >= 0 & (Y2 + H2 <= 4).
	
	X3 >= 0 & (X3 + L3 <= 8).
	Y3 >= 0 & (Y3 + H3 <= 4).
	
end_of_list.

formulas(intersections).

	X0 + L0 <= X1 | X1 + L1 <= X0 | Y0 + H0 <= Y1 | Y1 + H1 <= Y0.

	X0 + L0 <= X2 | X2 + L2 <= X0 | Y0 + H0 <= Y2 | Y2 + H2 <= Y0.

	X0 + L0 <= X3 | X3 + L3 <= X0 | Y0 + H0 <= Y3 | Y3 + H3 <= Y0.

	X1 + L1 <= X2 | X2 + L2 <= X1 | Y1 + H1 <= Y2 | Y2 + H2 <= Y1.

	X1 + L1 <= X3 | X3 + L3 <= X1 | Y1 + H1 <= Y3 | Y3 + H3 <= Y1.

	X2 + L2 <= X3 | X3 + L3 <= X2 | Y2 + H2 <= Y3 | Y3 + H3 <= Y2.

end_of_list.
